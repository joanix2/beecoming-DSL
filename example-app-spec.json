{
  "config": {
    "project_name": "GestionClients",
    "description": "Gestion de clients, commandes et missions",
    "database": {
      "provider": "postgres",
      "connection_string": "Host=localhost;Port=5432;Database=gestion_clients;Username=postgres;Password=postgres"
    },
    "api": {
      "port": 5000,
      "version": "v1",
      "base_url": "/api"
    },
    "frontend": {
      "port": 3000,
      "framework": "angular"
    },
    "features": {
      "auth": true,
      "email_service": false,
      "file_service": false,
      "notifications": false,
      "logging": true
    }
  },
  "models": [
    {
      "name": "Client",
      "properties": [
        {
          "name": "name",
          "type": "text",
          "required": true,
          "max_length": 150,
          "label": "Nom"
        },
        {
          "name": "email",
          "type": "text",
          "required": true,
          "unique": true,
          "max_length": 255,
          "label": "Email"
        },
        {
          "name": "phone",
          "type": "text",
          "required": false,
          "max_length": 30,
          "label": "Téléphone"
        },
        {
          "name": "createdAt",
          "type": "datetime",
          "required": true,
          "label": "Créé le"
        }
      ]
    },
    {
      "name": "Commande",
      "properties": [
        {
          "name": "reference",
          "type": "text",
          "required": true,
          "unique": true,
          "max_length": 50,
          "label": "Référence"
        },
        {
          "name": "amount",
          "type": "number",
          "required": true,
          "min_value": 0,
          "label": "Montant"
        },
        {
          "name": "status",
          "type": "select",
          "required": true,
          "options": ["nouvelle", "en_cours", "livree"],
          "label": "Statut"
        },
        {
          "name": "orderDate",
          "type": "date",
          "required": true,
          "label": "Date de commande"
        }
      ]
    },
    {
      "name": "Mission",
      "properties": [
        {
          "name": "title",
          "type": "text",
          "required": true,
          "max_length": 200,
          "label": "Titre"
        },
        {
          "name": "description",
          "type": "textarea",
          "required": false,
          "max_length": 1000,
          "label": "Description"
        },
        {
          "name": "startDate",
          "type": "date",
          "required": true,
          "label": "Début"
        },
        {
          "name": "endDate",
          "type": "date",
          "required": false,
          "label": "Fin"
        },
        {
          "name": "active",
          "type": "boolean",
          "required": true,
          "default": true,
          "label": "Active"
        }
      ]
    }
  ]
}
