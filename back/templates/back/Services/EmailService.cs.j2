using {{ project_name }}_api.Utils;
using System.Net;
using System.Net.Mail;

namespace {{ project_name }}_api.Services
{
    public interface IEmailService
    {
        Task SendEmailAsync(string to, string subject, string body);
        Task SendEmailAsync(string[] to, string subject, string body);
    }
    public class EmailService : IEmailService
    {
        public async Task SendEmailAsync(string to, string subject, string body)
        {
            var smtpClient = new SmtpClient(EnvironmentVariables.SMTP_HOST)
            {
                Port = int.Parse(EnvironmentVariables.SMTP_PORT),
                EnableSsl = true,
                Credentials = new NetworkCredential(EnvironmentVariables.SMTP_USERNAME, EnvironmentVariables.SMTP_PASSWORD)
            };

            var mailMessage = new MailMessage
            {
                From = new MailAddress(EnvironmentVariables.SMTP_FROM),
                Subject = subject,
                Body = body,
                IsBodyHtml = true
            };

            mailMessage.To.Add(to);

            try
            {
                await smtpClient.SendMailAsync(mailMessage);
            }
            catch (SmtpFailedRecipientException ex)
            {
                // Log the exception or handle it as needed
                Console.WriteLine($"Failed to send email to {to}: {ex.Message}");
                throw; // Re-throw the exception if you want it to propagate
            }
        }
        
        public async Task SendEmailAsync(string[] to, string subject, string body)
        {
            var smtpClient = new SmtpClient(EnvironmentVariables.SMTP_HOST)
            {
                Port = int.Parse(EnvironmentVariables.SMTP_PORT),
                EnableSsl = true
            };

            var mailMessage = new MailMessage
            {
                From = new MailAddress(EnvironmentVariables.SMTP_FROM),
                Subject = subject,
                Body = body,
                IsBodyHtml = true
            };

            foreach (var email in to)
            {
                mailMessage.To.Add(email);
            }

            await smtpClient.SendMailAsync(mailMessage);
        }
    }
}
